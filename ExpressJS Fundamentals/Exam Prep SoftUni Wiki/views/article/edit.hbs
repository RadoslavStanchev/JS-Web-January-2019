<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>Edit article
        {{#if isAdmin}}
        <div class="controls">
            {{#if isLocked}}
            <a href="/article/unlock/:id">Unlock article</a>
            {{else}}
            <a href="/article/lock/:id">Lock article</a>
            {{/if}}
        </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form action="/article/edit/{{_id}}" method="POST">
            <label>Article title</label>
            <h3>{{title}}</h3>
            <label>Content</label>
            <textarea name="content">
                {{content}}
            </textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>